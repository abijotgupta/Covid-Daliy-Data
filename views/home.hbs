<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
<style>
    .center {
        display: block;
        margin-left: auto;
        margin-right: auto;
    }
</style>
<h1 style="text-align: center;">CoronaVirus Country wise Data</h1>

{{#each info as |val key| }}
    <div  class ="center">
        <h2 style="text-align: center;">{{val.country}}</h2>
        <h3 style="text-align: center;" class="text-warning">Total Cases: {{val.cases}}</h3>
        <h3 style="text-align: center;" class="text-success">Total Recovered: {{val.recovered}}</h3>
        <h3 style="text-align: center;" class="text-danger">Total Deaths: {{val.deaths}}</h3>
        <img class ="center"src="{{val.countryInfo.flag}}"><br>
        <hr>
    </div>
    
{{/each}}